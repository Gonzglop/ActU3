<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1">

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TE DAMOS LA BIENVENIDA"
            android:textColor="#f975d9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="50sp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿CÓMO PODEMOS AYUDARTE?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl3">

        <Button
            android:id="@+id/bton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERDER PESO"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10sp"
            android:backgroundTint="#f7c1ea"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl4">

        <Button
            android:id="@+id/bton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLVERME MÁS FUERTE"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10sp"
            android:backgroundTint="#f7c1ea"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl5">

        <Button
            android:id="@+id/bton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MANTENERME EN\nFORMA"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10sp"
            android:backgroundTint="#f7c1ea"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl6"
        android:gravity="center">

        <Button
            android:id="@+id/bton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGUIENTE"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10sp"
            android:backgroundTint="#f7c1ea"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40sp"
            />

    </RelativeLayout>

</RelativeLayout>